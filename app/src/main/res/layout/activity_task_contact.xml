<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/task_img"
            android:layout_width="@dimen/dimen_size_80"
            android:layout_height="@dimen/dimen_size_80"
            android:layout_marginTop="@dimen/dimen_size_50"
            android:src="@mipmap/pay_success"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/task_hint"
            style="@style/Font15_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_size_10"
            android:text="抢单成功" />

        <TextView
            android:id="@+id/task_result"
            style="@style/Font13_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_size_30"
            android:layout_marginStart="@dimen/dimen_size_30"
            android:layout_marginTop="@dimen/dimen_size_10"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dimen_size_5"
            android:text="@string/grab_success" />

        <Button
            android:id="@+id/task_look"
            style="@style/Font15_light"
            android:layout_width="@dimen/dimen_size_130"
            android:layout_height="@dimen/btn_height"
            android:layout_marginBottom="@dimen/dimen_size_15"
            android:layout_marginTop="@dimen/dimen_size_20"
            android:background="@drawable/rec_bg_trans_stroke_blue"
            android:onClick="doClick"
            android:text="查看订单"
            android:textColor="@color/colorAccent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/divider" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/task_contact_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_marginTop="@dimen/dimen_size_10"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/dimen_size_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/task_img1"
                            android:layout_width="@dimen/dimen_size_25"
                            android:layout_height="@dimen/dimen_size_25"
                            android:layout_marginEnd="@dimen/dimen_size_10"
                            android:src="@mipmap/index_lab01"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/task_addr1"
                            style="@style/Font14_black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="@dimen/dimen_size_3"
                            android:text="地址" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/task_name1"
                        style="@style/Font14_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_size_35"
                        android:layout_marginTop="@dimen/dimen_size_5"
                        android:lineSpacingExtra="@dimen/dimen_size_3"
                        android:text="姓名    电话" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/task_call1"
                    android:layout_width="@dimen/dimen_size_45"
                    android:layout_height="@dimen/dimen_size_45"
                    android:layout_marginStart="@dimen/dimen_size_10"
                    android:onClick="doClick"
                    android:src="@mipmap/buy_tel_icon01"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_size_10"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/task_img2"
                            android:layout_width="@dimen/dimen_size_25"
                            android:layout_height="@dimen/dimen_size_25"
                            android:layout_marginEnd="@dimen/dimen_size_10"
                            android:src="@mipmap/index_lab02"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/task_addr2"
                            style="@style/Font14_black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="@dimen/dimen_size_3"
                            android:text="地址" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/task_name2"
                        style="@style/Font14_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_size_35"
                        android:layout_marginTop="@dimen/dimen_size_5"
                        android:lineSpacingExtra="@dimen/dimen_size_3"
                        android:text="姓名    电话" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/task_call2"
                    android:layout_width="@dimen/dimen_size_45"
                    android:layout_height="@dimen/dimen_size_45"
                    android:layout_marginStart="@dimen/dimen_size_10"
                    android:onClick="doClick"
                    android:src="@mipmap/buy_tel_icon02"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/divider" />

    </LinearLayout>

</LinearLayout>