<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginTop="@dimen/dimen_size_10"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dimen_size_10">

        <TextView
            android:id="@+id/live_title"
            style="@style/Font14_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/dimen_size_3"
            android:text="标题" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_size_10">

            <TextView
                android:id="@+id/live_time"
                style="@style/Font13_light"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dimen_size_3"
                android:drawableStart="@mipmap/ass_lab_icon06"
                android:gravity="center_vertical"
                android:text="0分钟前" />

            <TextView
                android:id="@+id/live_comment"
                style="@style/Font13_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dimen_size_3"
                android:drawableStart="@mipmap/ass_lab_icon07"
                android:gravity="center_vertical"
                android:text="0" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_marginTop="@dimen/dimen_size_10"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/live_content"
            style="@style/Font14_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_size_10"
            android:lineSpacingExtra="@dimen/dimen_size_3"
            android:text="内容" />

        <ImageView
            android:id="@+id/live_img"
            android:layout_width="@dimen/dimen_size_100"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_size_10"
            android:adjustViewBounds="true"
            android:onClick="doClick"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_logo"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_size_10">

            <TextView
                android:id="@+id/live_area"
                style="@style/Font13_light"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dimen_size_3"
                android:drawableStart="@mipmap/ass_lab_icon05"
                android:gravity="center_vertical"
                android:text="地区" />

            <TextView
                android:id="@+id/live_name"
                style="@style/Font13_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dimen_size_3"
                android:drawableStart="@mipmap/ass_lab_icon03"
                android:gravity="center_vertical"
                android:text="姓名" />

            <TextView
                android:id="@+id/live_tel"
                style="@style/Font13_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_size_20"
                android:drawablePadding="@dimen/dimen_size_3"
                android:drawableStart="@mipmap/ass_lab_icon02"
                android:gravity="center_vertical"
                android:text="电话" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider" />

</LinearLayout>