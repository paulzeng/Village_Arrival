<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginTop="@dimen/dimen_size_10"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/dimen_size_10"
            android:paddingStart="@dimen/dimen_size_10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_size_25"
                android:layout_marginEnd="@dimen/dimen_size_10"
                android:adjustViewBounds="true"
                android:src="@mipmap/log_icon01" />

            <TextView
                style="@style/Font14_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+86" />

            <View
                android:layout_width="@dimen/divider_height"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dimen_size_10"
                android:background="@color/lighter" />

            <EditText
                android:id="@+id/et_name"
                style="@style/Font14_black"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:hint="请输入手机号码"
                android:inputType="number"
                android:maxLength="11"
                android:maxLines="1" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_marginEnd="@dimen/dimen_size_10"
            android:layout_marginStart="@dimen/dimen_size_10"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/dimen_size_10"
            android:paddingStart="@dimen/dimen_size_10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_size_25"
                android:layout_marginEnd="@dimen/dimen_size_10"
                android:adjustViewBounds="true"
                android:src="@mipmap/log_icon03" />

            <EditText
                android:id="@+id/et_pwd"
                style="@style/Font14_black"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:hint="请输入6~20位登录密码"
                android:inputType="textPassword"
                android:maxLength="20" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_size_15"
        android:layout_marginStart="@dimen/dimen_size_15"
        android:layout_marginTop="@dimen/dimen_size_10"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/cb_remember"
            style="@style/Font13_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawablePadding="@dimen/dimen_size_5"
            android:drawableStart="@drawable/cb_login_selector"
            android:padding="@dimen/dimen_size_10"
            android:text="记住密码" />

        <TextView
            android:id="@+id/tv_forget"
            style="@style/Font13_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:onClick="doClick"
            android:padding="@dimen/dimen_size_10"
            android:text="找回密码？" />

    </RelativeLayout>

    <Button
        android:id="@+id/bt_bind"
        style="@style/Font15_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginEnd="@dimen/dimen_size_20"
        android:layout_marginStart="@dimen/dimen_size_20"
        android:background="@drawable/rec_bg_blue_shade"
        android:onClick="doClick"
        android:text="绑定账号" />

</LinearLayout>