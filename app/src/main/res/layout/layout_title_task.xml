<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_title"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="?attr/colorPrimary">

    <ImageView
        android:id="@id/iv_nav_back"
        android:layout_width="@dimen/dimen_size_90"
        android:layout_height="@dimen/dimen_size_45"
        android:layout_gravity="center_vertical"
        android:onClick="doClick"
        android:paddingEnd="@dimen/dimen_size_55"
        android:paddingStart="@dimen/dimen_size_0"
        android:src="@mipmap/nav_back"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/dimen_size_90"
        android:layout_marginStart="@dimen/dimen_size_90"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部任务"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_size_18" />

        <ImageView
            android:layout_width="@dimen/dimen_size_13"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_size_5"
            android:src="@mipmap/triangle_black"
            tools:ignore="ContentDescription" />

    </LinearLayout>

</FrameLayout>