<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_title"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="?attr/colorPrimary">

    <LinearLayout
        android:id="@+id/nav_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_30"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/dimen_size_70"
        android:layout_marginStart="@dimen/dimen_size_55"
        android:background="@drawable/rec_ova_bg_trans_stroke_lighter"
        android:gravity="center"
        android:onClick="doClick">

        <ImageView
            android:layout_width="@dimen/dimen_size_15"
            android:layout_height="@dimen/dimen_size_15"
            android:src="@mipmap/ass_top_icon01"
            tools:ignore="ContentDescription" />

        <TextView
            style="@style/Font14_lighter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_size_10"
            android:text="请输入关键字" />

    </LinearLayout>

    <TextView
        android:id="@+id/nav_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="@dimen/dimen_size_10"
        android:background="@drawable/rec_bg_blue_shade"
        android:onClick="doClick"
        android:paddingBottom="@dimen/dimen_size_5"
        android:paddingEnd="@dimen/dimen_size_12"
        android:paddingStart="@dimen/dimen_size_12"
        android:paddingTop="@dimen/dimen_size_5"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_size_15" />

    <ImageView
        android:id="@id/iv_nav_back"
        android:layout_width="@dimen/dimen_size_90"
        android:layout_height="@dimen/dimen_size_45"
        android:layout_gravity="center_vertical"
        android:onClick="doClick"
        android:paddingEnd="@dimen/dimen_size_55"
        android:paddingStart="@dimen/dimen_size_0"
        android:src="@mipmap/nav_back"
        tools:ignore="ContentDescription" />

</FrameLayout>