<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <View
        android:id="@+id/item_live_divider3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginTop="@dimen/dimen_size_10"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/item_live"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dimen_size_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <com.sunfusheng.glideimageview.GlideImageView
                    android:id="@+id/item_live_img"
                    android:layout_width="@dimen/dimen_size_30"
                    android:layout_height="@dimen/dimen_size_30"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/default_user"
                    app:riv_is_circle="true" />

                <TextView
                    android:id="@+id/item_live_title"
                    style="@style/Font14_black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_size_10"
                    android:layout_weight="1"
                    android:text="姓名" />

                <TextView
                    android:id="@+id/item_live_time"
                    style="@style/Font13_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_size_20"
                    android:drawablePadding="@dimen/dimen_size_3"
                    android:drawableStart="@mipmap/ass_lab_icon06"
                    android:gravity="center_vertical"
                    android:text="0分钟前" />

            </LinearLayout>

            <TextView
                android:id="@+id/item_live_content"
                style="@style/Font14_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_size_10"
                android:lineSpacingExtra="@dimen/dimen_size_3"
                android:text="内容" />

        </LinearLayout>

        <View
            android:id="@+id/item_live_divider1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_marginEnd="@dimen/dimen_size_10"
            android:layout_marginStart="@dimen/dimen_size_10"
            android:background="@color/divider" />

    </LinearLayout>

    <View
        android:id="@+id/item_live_divider2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginBottom="@dimen/dimen_size_10"
        android:background="@color/divider"
        android:visibility="gone" />

</LinearLayout>