<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rec_bg_white_r5"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        style="@style/Font15_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dimen_size_15"
        android:text="完成订单"
        android:textSize="@dimen/sp_size_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginEnd="@dimen/dimen_size_15"
        android:layout_marginStart="@dimen/dimen_size_15"
        android:background="@color/divider" />

    <TextView
        style="@style/Font14_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="@dimen/dimen_size_10"
        android:paddingBottom="@dimen/dimen_size_15"
        android:paddingEnd="@dimen/dimen_size_15"
        android:paddingStart="@dimen/dimen_size_15"
        android:paddingTop="@dimen/dimen_size_20"
        android:text="请输入客户订单短信验证码" />

    <EditText
        android:id="@+id/dialog_yzm"
        style="@style/Font14_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_size_20"
        android:layout_marginEnd="@dimen/dimen_size_50"
        android:layout_marginStart="@dimen/dimen_size_50"
        android:background="@drawable/rec_bg_trans_stroke_lighter"
        android:hint="验证码"
        android:inputType="number"
        android:maxLength="6"
        android:padding="@dimen/dimen_size_10" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialog_left"
            style="@style/Font15_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dimen_size_15"
            android:text="取消"
            android:textColor="@color/colorAccent" />

        <View
            android:layout_width="@dimen/divider_height"
            android:layout_height="match_parent"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/dialog_right"
            style="@style/Font15_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dimen_size_15"
            android:text="确定" />

    </LinearLayout>

</LinearLayout>