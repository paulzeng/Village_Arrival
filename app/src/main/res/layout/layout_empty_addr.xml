<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/empty_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dimen_size_120"
            android:layout_height="@dimen/dimen_size_120"
            android:layout_marginTop="@dimen/dimen_size_100"
            android:src="@mipmap/per_add_icon01"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@id/empty_hint"
            style="@style/Font15_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_size_3"
            android:text="暂无常用地址" />

    </LinearLayout>

    <Button
        android:id="@+id/empty_add"
        style="@style/Font15_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/dimen_size_20"
        android:background="@drawable/rec_bg_blue_shade"
        android:onClick="doClick"
        android:text="新增地址" />

</FrameLayout>
