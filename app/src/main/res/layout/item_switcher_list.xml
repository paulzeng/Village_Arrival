<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_size_70"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/switcher_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_size_10"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/switcher_img1"
            android:layout_width="@dimen/dimen_size_40"
            android:layout_height="@dimen/dimen_size_20"
            android:layout_marginEnd="@dimen/dimen_size_10"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/switcher_title1"
            style="@style/Font14_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/switcher_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_size_10"
        android:layout_marginTop="@dimen/dimen_size_10"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/switcher_img2"
            android:layout_width="@dimen/dimen_size_40"
            android:layout_height="@dimen/dimen_size_20"
            android:layout_marginEnd="@dimen/dimen_size_10"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/switcher_title2"
            style="@style/Font14_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1" />

    </LinearLayout>

</LinearLayout>
