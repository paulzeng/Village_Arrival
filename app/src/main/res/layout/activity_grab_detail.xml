<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingEnd="@dimen/dimen_size_10"
                android:paddingStart="@dimen/dimen_size_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_size_15">

                    <TextView
                        android:id="@+id/grab_type1"
                        style="@style/Font14_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="代买/顺风商品：" />

                    <TextView
                        android:id="@+id/grab_product"
                        style="@style/Font14_black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="名称" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_size_10">

                    <TextView
                        style="@style/Font14_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="商品重量：" />

                    <TextView
                        android:id="@+id/grab_weight"
                        style="@style/Font14_black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_size_10">

                    <TextView
                        android:id="@+id/grab_type2"
                        style="@style/Font14_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="购买/取件时间：" />

                    <TextView
                        android:id="@+id/grab_time"
                        style="@style/Font14_black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_size_10">

                    <TextView
                        style="@style/Font14_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="送货时间：" />

                    <TextView
                        android:id="@+id/grab_send"
                        style="@style/Font14_black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_marginBottom="@dimen/dimen_size_10"
                    android:layout_marginTop="@dimen/dimen_size_15"
                    android:background="@color/divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/grab_img1"
                                android:layout_width="@dimen/dimen_size_25"
                                android:layout_height="@dimen/dimen_size_25"
                                android:layout_marginEnd="@dimen/dimen_size_10"
                                android:src="@mipmap/index_lab01"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:id="@+id/grab_addr1"
                                style="@style/Font14_black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="@dimen/dimen_size_3"
                                android:text="地址" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/grab_name1"
                            style="@style/Font14_light"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_size_35"
                            android:layout_marginTop="@dimen/dimen_size_5"
                            android:lineSpacingExtra="@dimen/dimen_size_3"
                            android:text="姓名    电话" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/grab_call1"
                        android:layout_width="@dimen/dimen_size_45"
                        android:layout_height="@dimen/dimen_size_45"
                        android:layout_marginStart="@dimen/dimen_size_10"
                        android:src="@mipmap/buy_tel_icon01"
                        android:visibility="gone"
                        tools:ignore="ContentDescription" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_size_10"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/grab_img2"
                                android:layout_width="@dimen/dimen_size_25"
                                android:layout_height="@dimen/dimen_size_25"
                                android:layout_marginEnd="@dimen/dimen_size_10"
                                android:src="@mipmap/index_lab02"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:id="@+id/grab_addr2"
                                style="@style/Font14_black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="@dimen/dimen_size_3"
                                android:text="地址" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/grab_name2"
                            style="@style/Font14_light"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_size_35"
                            android:layout_marginTop="@dimen/dimen_size_5"
                            android:lineSpacingExtra="@dimen/dimen_size_3"
                            android:text="姓名    电话" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/grab_call2"
                        android:layout_width="@dimen/dimen_size_45"
                        android:layout_height="@dimen/dimen_size_45"
                        android:layout_marginStart="@dimen/dimen_size_10"
                        android:src="@mipmap/buy_tel_icon02"
                        android:visibility="gone"
                        tools:ignore="ContentDescription" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_marginTop="@dimen/dimen_size_10"
                    android:background="@color/divider" />

                <LinearLayout
                    android:id="@+id/grab_check_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_height">

                        <TextView
                            style="@style/Font14_light"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="开箱验货：" />

                        <TextView
                            android:id="@+id/grab_check"
                            style="@style/Font14_black_dark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_height"
                        android:background="@color/divider" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/grab_memo_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/Font14_light"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/line_height"
                            android:gravity="center_vertical"
                            android:text="备注信息：" />

                        <TextView
                            android:id="@+id/grab_memo"
                            style="@style/Font14_black_dark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="@dimen/dimen_size_3"
                            android:minHeight="@dimen/line_height"
                            android:paddingBottom="@dimen/dimen_size_13"
                            android:paddingTop="@dimen/dimen_size_13" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_height"
                        android:background="@color/divider" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/grab_total_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_size_15"
                        android:gravity="center_vertical|end">

                        <TextView
                            style="@style/Font14_light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="顺送费：" />

                        <TextView
                            android:id="@+id/grab_yong"
                            style="@style/Font14_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0元"
                            android:textColor="@color/red" />

                        <LinearLayout
                            android:id="@+id/grab_fee_ll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/Font14_light"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" + 小费：" />

                            <TextView
                                android:id="@+id/grab_fee"
                                style="@style/Font14_black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0元"
                                android:textColor="@color/red" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_size_15"
                        android:layout_marginTop="@dimen/dimen_size_10"
                        android:gravity="end">

                        <TextView
                            style="@style/Font14_light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="合计：" />

                        <TextView
                            android:id="@+id/grab_total"
                            style="@style/Font14_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/red"
                            android:textSize="@dimen/sp_size_20" />

                        <TextView
                            style="@style/Font14_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="元"
                            android:textColor="@color/red" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/grab_commission_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_size_15"
                    android:layout_marginTop="@dimen/dimen_size_10"
                    android:gravity="end|bottom">

                    <TextView
                        style="@style/Font14_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="顺送费：" />

                    <TextView
                        android:id="@+id/grab_commission"
                        style="@style/Font14_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/red"
                        android:textSize="@dimen/sp_size_20" />

                    <TextView
                        style="@style/Font14_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元"
                        android:textColor="@color/red" />

                    <TextView
                        android:id="@+id/grab_commission_fee"
                        style="@style/Font12_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="（小费：0元）" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/divider" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:layout_marginTop="@dimen/dimen_size_10"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimen_size_15"
                android:paddingEnd="@dimen/dimen_size_10"
                android:paddingStart="@dimen/dimen_size_10"
                android:paddingTop="@dimen/dimen_size_15">

                <TextView
                    android:id="@+id/grab_order"
                    style="@style/Font14_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="订单编号：" />

                <TextView
                    android:id="@+id/grab_submit"
                    style="@style/Font14_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_size_8"
                    android:text="下单时间：" />

                <TextView
                    android:id="@+id/grab_pay"
                    style="@style/Font14_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_size_8"
                    android:text="付款时间：" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:layout_marginBottom="@dimen/dimen_size_10"
                android:background="@color/divider" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <Button
            android:id="@+id/bt_done"
            style="@style/Font15_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginBottom="@dimen/dimen_size_10"
            android:layout_marginEnd="@dimen/dimen_size_20"
            android:layout_marginStart="@dimen/dimen_size_20"
            android:layout_marginTop="@dimen/dimen_size_10"
            android:background="@drawable/rec_bg_blue_shade"
            android:onClick="doClick"
            android:text="我已完成" />

    </FrameLayout>

</LinearLayout>