<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <View
        android:id="@+id/item_live_divider3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginTop="@dimen/dimen_size_10"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/item_live"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dimen_size_10">

            <TextView
                android:id="@+id/item_live_title"
                style="@style/Font14_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/dimen_size_3"
                android:text="标题" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_live_area"
                    style="@style/Font13_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dimen_size_3"
                    android:drawableStart="@mipmap/ass_lab_icon05"
                    android:gravity="center_vertical"
                    android:text="地区" />

                <TextView
                    android:id="@+id/item_live_time"
                    style="@style/Font13_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_size_20"
                    android:drawablePadding="@dimen/dimen_size_3"
                    android:drawableStart="@mipmap/ass_lab_icon06"
                    android:gravity="center_vertical"
                    android:text="0分钟前" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_size_1"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/item_live_comment"
                    style="@style/Font13_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dimen_size_3"
                    android:drawableStart="@mipmap/ass_lab_icon07"
                    android:gravity="center_vertical"
                    android:text="0" />

                <TextView
                    android:id="@+id/item_live_del"
                    style="@style/Font13_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dimen_size_3"
                    android:drawableStart="@mipmap/ass_lab_icon04"
                    android:layout_marginStart="@dimen/dimen_size_20"
                    android:paddingTop="@dimen/dimen_size_10"
                    android:gravity="center_vertical"
                    android:text="删除" />

                <TextView
                    android:id="@+id/item_live_cancel"
                    style="@style/Font13_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_size_20"
                    android:paddingTop="@dimen/dimen_size_10"
                    android:gravity="center_vertical"
                    android:text="取消收藏" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/item_live_divider1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_marginEnd="@dimen/dimen_size_10"
            android:layout_marginStart="@dimen/dimen_size_10"
            android:background="@color/divider" />

    </LinearLayout>

    <View
        android:id="@+id/item_live_divider2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider"
        android:visibility="gone" />

</LinearLayout>